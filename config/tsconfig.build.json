{
  "extends": "../tsconfig.json",
  "include": [
    "../src/**/*",
  ],
  "exclude": [
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.util.ts",
    "../**/*.test.util.ts",
    "../src/tests",
  ],
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../src",
    "noEmit": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true
  }
}
